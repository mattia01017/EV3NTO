<!DOCTYPE html>
<html lang="en">
<%- include('./partials/head') %>

    <body class="bg-black text-white">
        <%- include('./partials/header') %>

            <div class="card border-light rounded-4 border-opacity-25 bg-black container-lg mt-3 mb-3">
                <div class="card-body">
                    <h3 class="display-5 ms-1 mb-3">Dettagli Evento</h2>
                        <div class="card-text">
                            <div class="row opacity-0" id="card-content">
                                <p><strong>Codice invito:</strong> <span id="e-invcode"></span></p>
                                <div class="col-sm position-relative">
                                    <div class="d-flex align-items-center position-absolute top-50 start-50 translate-middle"
                                        id="img-spinner">
                                        <div class="spinner-border ms-3" role="status" aria-hidden="true"></div>
                                    </div>
                                    <img id="e-img">
                                </div>
                                <div class="col-sm">
                                    <p><strong>Titolo:</strong> <span id="e-title"></span></p>
                                    <p><strong>Data:</strong> <span id="e-date"></span></p>
                                    <p><strong>Organizzatore:</strong> <span id="e-org"></span></p>
                                    <p><strong>Luogo:</strong> <span id="e-loc"></span></p>
                                    <p><strong>Pubblico?</strong> <span id="e-priv">SÃ¬</span></p>
                                    <p><strong>Partecipanti:</strong> <span id="e-part">3</span></p>
                                    <p><strong>Descrizione:</strong><br><span id="e-desc"></span></p>
                                </div>
                            </div>
                            <div class="float-end">
                                <% if (edit) { %>
                                <button class="mt-3 btn btn-light" data-bs-toggle="modal" data-bs-target="#modal">
                                    Visualizza partecipanti
                                </button>
                                <a class="btn btn-danger mt-3">Elimina evento</a>
                                <!-- Modal -->
                                <div class="modal fade text-black" id="modal" tabindex="-1" aria-labelledby="modalLabel"
                                    aria-hidden="true">
                                    <div class="modal-dialog">
                                        <div class="modal-content">
                                            <div class="modal-header">
                                                <h3 class="modal-title" id="modalLabel">Partecipanti</h3>
                                                <button type="button" class="btn-close" data-bs-dismiss="modal"
                                                    aria-label="Close"></button>
                                            </div>
                                            <div class="modal-body">
                                                <ul>

                                                </ul>
                                            </div>
                                            <div class="modal-footer">
                                                <button type="button" class="btn btn-secondary"
                                                    data-bs-dismiss="modal">Ok</button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <% } else { %>
                                <button class="btn btn-lg" id="part-btn">
                                    <div class="spinner-border spinner-border-sm" role="status"></div>
                                </button>
                                <% } %>
                            </div>
                            <div class="d-flex align-items-center position-absolute top-50 start-50 translate-middle"
                                id="spinner">
                                <strong>Caricamento...</strong class="display-6">
                                <div class="spinner-border ms-3" role="status" aria-hidden="true"></div>
                            </div>
                        </div>
                </div>
            </div>
            <%- include('./partials/footer') %>
    </body>
    <script src="js/fetchEvent.js" type="application/javascript"></script>

</html>